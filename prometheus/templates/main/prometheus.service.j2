Description=Prometheus
After=syslog.target network.target

[Service]
User=prometheus
Group=prometheus
EnvironmentFile=/etc/sysconfig/prometheus
ExecStart={{file_dst_prometheus_current_link}}/prometheus $OPTIONS

[Install]
WantedBy=multi-user.target
