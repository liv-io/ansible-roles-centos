PARAMETERS
--------------------------------------------------------------------------------

ROLE
  yum_state
    Description: Control the state of the role.
    Implemented: 0.1
    Required   : False
    Value      : Predetermined
    Type       : String
    Default    : 'install'
    Options    :
      Install : 'true' | 'yes' | 'install'
      Inactive: 'quiesce' | 'inactive'

  yum_check_update_day
    Description: Define the 'yum_check_update_day' option.
    Implemented: 1.1
    Required   : False
    Value      : Arbitrary
    Type       : Integer, String
    Default    : '*'
    Options    :
      Examples: '1' | '*/2'

  yum_check_update_hour
    Description: Define the 'yum_check_update_hour' option.
    Implemented: 1.1
    Required   : False
    Value      : Arbitrary
    Type       : Integer, String
    Default    : '5'
    Options    :
      Examples: '5' | '*/6'

  yum_check_update_minute
    Description: Define the 'yum_check_update_minute' option.
    Implemented: 1.1
    Required   : False
    Value      : Arbitrary
    Type       : Integer, String
    Default    : "{{(30|random(seed=inventory_hostname))}}"
    Options    :
      Examples: '42' | '*/30'

  yum_check_update_month
