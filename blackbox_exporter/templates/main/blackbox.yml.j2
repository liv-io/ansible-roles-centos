modules:
{% for item in blackbox_exporter_config|default([]) %}
{% if not ((item.name|default('')) == '') %}
  #-----------------------------------------------------------------------------
  # {{(item.name|upper)}}
  #-----------------------------------------------------------------------------

{% endif %}
{% if not ((item.comment|default('')) == '') %}
  # {{(item.comment)}}
{% endif %}
  {{item.name}}:
    prober: {{item.prober}}
    timeout: {{item.timeout|default('5s')}}
    {{item.prober}}:
{% for config in item.config %}
      {{config}}
{% endfor %}

{% endfor %}
