# Local domain name
{% if not (resolver_domain == '') %}
domain {{resolver_domain}}
{% endif %}

# Search list for host-name lookup
{% if not (resolver_search == []) %}
search {% for search in resolver_search %}{{search}}{% if not loop.last %} {% endif %}{% endfor %}

{% endif %}

# Name server IP address
{% for item in (resolver_nameserver|default([])) %}
{% if not ((item.comment|default('')) == '') %}
# {{item.comment}}
{% endif %}
nameserver {{item.server}}
{% endfor %}
