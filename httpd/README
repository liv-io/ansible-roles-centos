      None    : []

  config
    Description: Define the 'config' option.
    Implemented: 2.0
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: |
        <Directory "/data/host">
          AllowOverride none
          Require all granted
        </Directory>
      None: ''

  document_root
